{% if not icons %}
  <p>No icons available in this theme.</p>
{% else %}
  <p>Add an icon add the start of your text.</p>

  <div class="row">
    <div class="col col-md-6">
      <div class="sg-example">
        <p><span class="icon-star">Star icon</span></p>
        <p><span class="icon-star"></span></p>
        <p><a href="#" class="icon-phone">Call us</a></p>
        <p><a href="#" class="icon-mail"><span class="element-invisible">Mail us</span></a></p>
      </div>
    </div>
    <div class="col col-md-6">
    <pre class="sg-code">
      <code class="language-markup">
        {{ styleguideHtml('
<span class="icon-star">Star icon</span>
<span class="icon-star"></span>
<a href="#" class="icon-phone">Call us</a>
<a href="#" class="icon-mail"><span class="element-invisible">Mail us</span></a>
        ') }}
      </code>
    </pre>
    </div>
  </div>

  <h4>Icon classes</h4>

  <div class="row">
    {% for icon in icons %}
      <div class="col-6 col-xs-4 col-sm-3 col-md-2 col-lg-1">
        <div class="sg-icon default-border default-border-radius">
          <span class="icon-graph {{ icon.class }} default-border-bottom"></span>
          <span class="icon-name">{{ icon.name }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}


